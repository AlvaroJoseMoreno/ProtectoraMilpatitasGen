@model WebProtectoraMilpatitas.Models.TestAnimalIdealViewModel

@{
    ViewBag.Title = "Editar Test Animal Ideal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Test Animal Ideal</h2>

@using (Html.BeginForm("Edit", "TestAnimalIdeal", FormMethod.Post, new { @class = "formNoTanGuapo" }))
{
    @Html.AntiForgeryToken()



    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <p class="text">
        @Html.LabelFor(model => model.AficionFavorita, htmlAttributes: new { @class = "control-label col-md-2" })

        @Html.EditorFor(model => model.AficionFavorita, new { htmlAttributes = new { @class = "form-control" } })
    </p>
    @Html.ValidationMessageFor(model => model.AficionFavorita, "", new { @class = "text-danger" })


    <p class="text">
    @Html.LabelFor(model => model.Personalidad, htmlAttributes: new { @class = "control-label col-md-2" })

    @Html.EditorFor(model => model.Personalidad, new { htmlAttributes = new { @class = "form-control" } })
    </p>
       @Html.ValidationMessageFor(model => model.Personalidad, "", new { @class = "text-danger" })


    <p class="text">
    @Html.LabelFor(model => model.ColorFavorito, htmlAttributes: new { @class = "control-label col-md-2" })

    @Html.EditorFor(model => model.ColorFavorito, new { htmlAttributes = new { @class = "form-control" } })
    </p>
    @Html.ValidationMessageFor(model => model.ColorFavorito, "", new { @class = "text-danger" })


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Editar" class="btn btn-default" />
        </div>
    </div>

}

<div>
    <i class="fas fa-clipboard-list"></i> @Html.ActionLink("Volver a la lista", "Index")
</div>
