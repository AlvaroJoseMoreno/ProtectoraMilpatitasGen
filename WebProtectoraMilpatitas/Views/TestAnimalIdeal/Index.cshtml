@model PagedList.IPagedList<WebProtectoraMilpatitas.Models.TestAnimalIdealViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Tests Animal Ideal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tests Animal Ideal</h2>

<p>
    @Html.ActionLink("Crear nuevo test animal ideal", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar por afición: @Html.TextBox("aficionSearch")
        <input type="submit" value="Buscar" />
    </p>
}

@using (Html.BeginForm())
{
    <p>
        Buscar por color: @Html.TextBox("colorSearch")
        <input type="submit" value="Buscar" />
    </p>
}

@using (Html.BeginForm())
{
    <p>
        Buscar por perfonalidad: @Html.TextBox("personSearch")
        <input type="submit" value="Buscar" />
    </p>
}

@using (Html.BeginForm())
{
    <p>
        Buscar por usuario: @Html.TextBox("usuSearch")
        <input type="submit" value="Buscar" />
    </p>
}

@if (((string)TempData["mensajeModalTest"]) != null)
{
    <div id="capafondo">

        <article id="ar">
            <h2>Test animal ideal</h2>
            <p>
                @((string)TempData["mensajeModalTest"])
            </p>
            <footer><button class="button" onclick="cerrarMensajeModal();">cerrar</button></footer>
        </article>
    </div>


}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Afición Favorita", "Index", new { sortOrder = ViewBag.AficionSort })
        </th>
        <th>
            @Html.ActionLink("Personalidad", "Index", new { sortOrder = ViewBag.PersonalidadSort })
        </th>
        <th>
            @Html.ActionLink("Color Favorito", "Index", new { sortOrder = ViewBag.ColorSort })
        </th>
        <th>
            @Html.ActionLink("Usuario", "Index", new { sortOrder = ViewBag.UsuarioSort })
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AficionFavorita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColorFavorito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idUsuario)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<br />
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
<div>
    @Html.ActionLink("Volver a inicio", "Indexad", "Home")
</div>
