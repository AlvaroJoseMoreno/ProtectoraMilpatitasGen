@model WebProtectoraMilpatitas.Models.AnimalViewModel

@{
    ViewBag.Title = "Protectora Milpatitas";
    Layout = "~/Views/Shared/_LayoutUsu.cshtml";
}

@using (Html.BeginForm("BusquedaRapida", "Animal", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })

                <input type="submit" value="Buscar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<h2>Soy una prueba</h2>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
