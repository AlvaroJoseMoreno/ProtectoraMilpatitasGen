@model WebProtectoraMilpatitas.Models.SeguimientoViewModel
@using ProtectoraMilpatitasGenNHibernate.EN.ProtectoraMilpatitas;

@{
    ViewBag.Title = "Details";

    if (Session["Usuario"] != null)
    {
        if (((UsuarioEN)Session["Usuario"]).GetType() == typeof(AdministradorEN))
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutUsu.cshtml";
        }
    }
}

<h2>Detalles Seguimiento</h2>
<section id="secanim">
    <main id="details">
        <article class="detalle">
            <h2>


                @Html.DisplayFor(model => model.NomUsuario)
            </h2>
            <div>


                <p>


                    <img style="display:block;margin:auto; width: 200px;height: 200px; border-radius: 80%;" src="/@Html.DisplayFor(model => model.FotoUsuario)" />
                </p>


                <h2>@Html.DisplayFor(model => model.NomAnimal)</h2>






                <p>
                    <img style="display:block;margin:auto; width: 200px;height: 200px; border-radius: 80%;" src="/@Html.DisplayFor(model => model.FotoAnimal)" />
                </p>

                <p>
                    <b>@Html.DisplayNameFor(model => model.Fecha)</b>

                    @Html.DisplayFor(model => model.Fecha)
                </p>


                <p>
                    <b>@Html.DisplayNameFor(model => model.Estado)</b>

                    @Html.DisplayFor(model => model.Estado)
                </p>

                <p>
                    <b>@Html.DisplayNameFor(model => model.Descripcion)</b>

                    @Html.DisplayFor(model => model.Descripcion)
                </p>
            </div>
            <div>
                <p>
                    @{

                        if (Session["Usuario"] != null)
                        {
                            if (((UsuarioEN)Session["Usuario"]).GetType() == typeof(AdministradorEN))
                            {
                                 <i class="fas fa-pen"></i> @Html.ActionLink("Editar", "Edit", new { id = Model.Id })
                            }
                        }
                    }
                </p>

                <p class="parrafoCentrar">
                    
                    @{

                        if (Session["Usuario"] != null)
                        {
                            if (((UsuarioEN)Session["Usuario"]).GetType() == typeof(AdministradorEN))
                            {
                                <i class="fas fa-eye"></i> @Html.ActionLink("Volver a la lista", "Index")
                            }
                            else
                            {
                                <i class="fas fa-home"></i> @Html.ActionLink("Volver a inicio", "Index", "Home")
                            }
                        }
                    }
                </p>
            </div>
        </article>
    </main>
</section>
