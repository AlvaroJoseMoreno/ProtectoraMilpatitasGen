@model IEnumerable<WebProtectoraMilpatitas.Models.SeguimientoViewModel>

@{
    ViewBag.Title = "ObtenerSeguimientoUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de seguimientos del usuario: @ViewData["NombreUsuario"]</h2>

<p>
    @Html.ActionLink("Crear nuevo seguimiento", "Create")
</p>
<p>
    @Html.ActionLink("Volver a usuarios", "Index", "Usuario")
</p>
<table class="table">
    @{
        if (Model.Any())
        {
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>

                <th></th>
            </tr>
        }
        else
        {
            <tr>No hay seguimientos</tr>
        }
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>