@model WebProtectoraMilpatitas.Models.SeguimientoViewModel

<h2>Eliminar Seguimiento</h2>

<h3>¿Estás seguro de que quieres eliminar el seguimiento @ViewData["IdSeg"] de @ViewData["NombreSeg"]?</h3>
<div>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            <i class="fas fa-eye"></i> @Html.ActionLink("Volver a la lista", "Index")
        </div>
    }
</div>
