@model WebProtectoraMilpatitas.Models.SeguimientoViewModel

@{
    ViewBag.Title = "Crear nuevo seguimiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Seguimiento</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SeguimientoViewModel</h4>//existo
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Usuario, ViewData["Usuario"] as SelectList, "Selecciona un usuario")

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Animal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Animal, ViewData["Animal"] as SelectList, "Selecciona un animal")
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Contrato, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Contrato, ViewData["Contrato"] as SelectList, "Selecciona una solicitud")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
