@model WebProtectoraMilpatitas.Models.SeguimientoViewModel

@{
    ViewBag.Title = "ActualizarEstado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Actualizar Estado Seguimiento</h2>


@using (Html.BeginForm("ActualizarEstado", "Seguimiento", FormMethod.Post, new { @class = "formNoTanGuapo" }))
{
    @Html.AntiForgeryToken()

    
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<p class="text">
    @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })

    @Html.EnumDropDownListFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
</p>
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar" class="btn btn-default" />
            </div>
        </div>
    
}

<div class="parrafoCentrar">
    <i class="fas fa-eye"></i> @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
