@model PagedList.IPagedList<WebProtectoraMilpatitas.Models.RazaViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "ObtenerRazasPorEspecie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Razas de la especie @ViewData["NombreEspecie"]</h2>

<p>
    @Html.ActionLink("Crear nueva raza", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar por nombre raza: @Html.TextBox("nameRazaSearch")
        <input type="submit" value="Buscar" />
    </p>
}

@using (Html.BeginForm())
{
    <p>
        Buscar por nombre especie: @Html.TextBox("nameEspecieSearch")
        <input type="submit" value="Buscar" />
    </p>
}
<table class="table">
    @{
        if (Model.Any())
        {
            <tr>
                <th>
                    @Html.ActionLink("Nombre Raza", "ObtenerRazasPorEspecie", new { p_especie= ViewData["idEspecie"], sortOrder = ViewBag.NameRazaSort })
                </th>
                <th>
                    @Html.ActionLink("Nombre Especie", "ObtenerRazasPorEspecie", new { p_especie = ViewData["idEspecie"], sortOrder = ViewBag.NameEspecieSort })
                </th>
                <th></th>
            </tr>
        }
        else
        {
            <tr>No tiene razas de esa especie</tr>
        }
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomEspecie)
            </td>
        </tr>
    }

</table>
<br />
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
<div>
    @Html.ActionLink("Volver a especies", "Index")
</div>
