@model WebProtectoraMilpatitas.Models.RazaViewModel

@{
    ViewBag.Title = "Crear nueva raza";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear nueva raza</h2>

@using (Html.BeginForm("Create", "raza", FormMethod.Post, new { @class = "formGuapo" })) 
{
    @Html.AntiForgeryToken()
    
    
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <p class="text">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
        </p>
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            

        <p class="text">
            @Html.LabelFor(model => model.idEspecie, htmlAttributes: new { @class = "control-label col-md-2" })
            
                @Html.DropDownListFor(model=> model.idEspecie, ViewData["idEspecie"] as SelectList, "Selecciona una especie")
        </p>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
