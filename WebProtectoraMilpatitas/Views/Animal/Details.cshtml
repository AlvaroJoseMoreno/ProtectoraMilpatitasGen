@model WebProtectoraMilpatitas.Models.AnimalViewModel

@{
    ViewBag.Title = "Protectoramilpatitas-Pagina de detalle de animal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/codigo.js"></script>
<h2>Detalles del animal</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Nombre)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
                @Html.DisplayNameFor(model => model.Foto)
        </dt>

        <dd>
           <img style="width: 200px;height: 200px;" src="/@Html.DisplayFor(model => model.Foto)" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Edad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Edad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sexo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Centro)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Centro)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Caracter)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Caracter)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DatosMedicos)
        </dt>
        @if (Model.DatosMedicos.ToString().Equals("enRecuperacion"))
        {
            <dd>
                En recuperación
            </dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.DatosMedicos)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.EstadoAdopcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EstadoAdopcion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.idEspecie)
        </dt>


        <dd>

            @Html.DisplayFor(model => model.idEspecie)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
