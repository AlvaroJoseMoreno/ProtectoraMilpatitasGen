@model PagedList.IPagedList<WebProtectoraMilpatitas.Models.AnimalViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "ObtenerAnimalesPorEspecie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de la Especie @ViewData["NombreEspecie"]</h2>

<table class="table">
    @{
        if (Model.Any())
        {
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Edad
                </th>
                <th>
                    Sexo
                </th>
                <th>
                    Centro
                </th>
                <th>
                    Caracter
                </th>
                <th></th>
            </tr>
        }
        else
        {
            <tr>No tiene animales de esa especie</tr>
        }
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Centro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caracter)
            </td>
        </tr>
    }

</table>
<br />
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
<div>
    @Html.ActionLink("Volver a especies", "Index", "Especie")
</div>
