@model WebProtectoraMilpatitas.Models.AnimalViewModel

@{
    ViewBag.Title = "ActualizarEstado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Actualizar Estado Animal</h2>


@using (Html.BeginForm("ActualizarEstado", "Animal", FormMethod.Post, new { @class = "formNoTanGuapo" }))
{
    @Html.AntiForgeryToken()
    
    
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text">
            @Html.LabelFor(model => model.EstadoAdopcion, htmlAttributes: new { @class = "control-label col-md-2" })
            
                @Html.EnumDropDownListFor(model => model.EstadoAdopcion, new { htmlAttributes = new { @class = "form-control" } })
        </p>
                @Html.ValidationMessageFor(model => model.EstadoAdopcion, "", new { @class = "text-danger" })
          

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar" class="btn btn-default" />
            </div>
        </div>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
