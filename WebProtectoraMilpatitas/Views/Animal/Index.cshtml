@model IEnumerable<WebProtectoraMilpatitas.Models.AnimalViewModel>

@{
    ViewBag.Title = "Index animales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Animales</h2>

<p>
    @Html.ActionLink("Subir nuevo animal", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Centro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Caracter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatosMedicos)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Edad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sexo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Centro)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Caracter)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DatosMedicos)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("ActualizarEstado", "ActualizarEstado", new { id = item.Id }) |
        @Html.ActionLink("ActualizarDatosMedicos", "ActualizarDatosMedicos", new { id = item.Id }) |
        @Html.ActionLink("Obtener animales por especie", "ObtenerAnimalesPorEspecie", new {id = item. }, htmlAttributes:null) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>

<div>
    @Html.ActionLink("Volver a inicio", "Index", "Home")
</div>
