@model IEnumerable<WebProtectoraMilpatitas.Models.AnimalViewModel>

@{
    ViewBag.Title = "Resultado Busqueda";
    Layout = "~/Views/Shared/_LayoutUsu.cshtml";
}

<h2>Resultado Busqueda</h2>
<p>Fecha introducida: @TempData["fecha"]</p>
<table class="table">
    @{
        if (Model.Any())
        {
            <tr>
                <th>
                    Animal
                </th>
                <th>
                    Edad
                </th>
                <th>
                    Sexo
                </th>
                <th>
                    Centro
                </th>
                <th>
                    Caracter
                </th>
                <th>
                    Estado de Salud
                </th>
                <th>
                    Especie
                </th>
                <th>
                    Raza
                </th>
                <th>
                    Fecha Llegada
                </th>
            </tr>
        }
        else
        {
            <tr>No se han encontrado animales con esos criterios de búsqueda</tr>
        }
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <figure>
                    <figcaption>@Html.ActionLink(item.Nombre, "Details", new { id = item.Id }) </figcaption>
                    <img style="display:block;margin:auto; width: 200px;height: 200px;" src="/@Html.DisplayFor(modelItem => item.Foto)" />
                </figure>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Centro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caracter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatosMedicos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomEspecie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomRaza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaLlegada)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
