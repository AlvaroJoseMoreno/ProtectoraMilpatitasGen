@model PagedList.IPagedList<WebProtectoraMilpatitas.Models.ContratoAdopcionViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index Contratos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contratos de Adopcion</h2>

<p>
    @Html.ActionLink("Crear nuevo contrato", "Create")
</p>

 
    
<main id="mainart">
    @foreach (var item in Model)
    {
    <article class="articulos">
        <div>
            <p>
                @if (item.Nombre != null)
                {
                    <h2>@Html.ActionLink(item.Nombre, "Details", new { id = item.Id })</h2>
                }
                else
                {
                    <h2>@Html.DisplayFor(modelItem => item.Nombre)</h2>
                }

            </p>
           
                
            <p>@Html.ActionLink(item.NomUsuario, "Details", "Usuario", new { email = item.idUsuario }, htmlAttributes: null) </p>
            <img style="margin:auto; width: 100px;height: 100px;" src="/@Html.DisplayFor(modelItem => item.FotoUsuario)" />
                
            
           
                
            <p>@Html.ActionLink(item.NomAnimal, "Details", "Animal", new { id = item.idAnimal }, htmlAttributes: null) </p>
            <img style="margin:auto; width: 100px;height: 100px;" src="/@Html.DisplayFor(modelItem => item.FotoAnimal)" />
                
         </div>
         <div>
            <p>
                @Html.DisplayFor(modelItem => item.idSolicitud)
            </p>
            
            <p>@Html.ActionLink("Editar", "Edit", new { id = item.Id })</p> 
            <p>@Html.ActionLink("Actualizar Estado", "ActualizarEstado", new { id = item.Id })</p>
            <p>@Html.ActionLink("Detalles", "Details", new { id = item.Id })</p>
            <p>@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</p>
                       
        </div>
    </article>
    }

</main>
<br/>
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
<div>
    @Html.ActionLink("Volver a inicio", "Indexad", "Home")
</div>
