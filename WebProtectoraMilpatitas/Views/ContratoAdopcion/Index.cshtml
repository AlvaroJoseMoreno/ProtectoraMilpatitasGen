@model IEnumerable<WebProtectoraMilpatitas.Models.ContratoAdopcionViewModel>

@{
    ViewBag.Title = "Index Contratos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contratos de Adopcion</h2>

<p>
    @Html.ActionLink("Crear nuevo contrato", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idAnimal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idSolicitud)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.idUsuario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.idAnimal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.idSolicitud)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("ActualizarEstado", "ActualizarEstado", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>

<div>
    @Html.ActionLink("Volver a inicio", "Index", "Home")
</div>
