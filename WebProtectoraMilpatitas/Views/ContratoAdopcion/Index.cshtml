@model IEnumerable<WebProtectoraMilpatitas.Models.ContratoAdopcionViewModel>

@{
    ViewBag.Title = "Index Contratos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contratos de Adopcion</h2>

<p>
    @Html.ActionLink("Crear nuevo contrato", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomAnimal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idSolicitud)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.ActionLink(item.NomUsuario, "Details", "Usuario", new { id = item.idUsuario }, htmlAttributes: null)
    </td>
    <td>
        @Html.ActionLink(item.NomAnimal, "Details", "Animal", new { id = item.idAnimal }, htmlAttributes: null)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.idSolicitud)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Actualizar Estado", "ActualizarEstado", new { id = item.Id }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>

<div>
    @Html.ActionLink("Volver a inicio", "Indexad", "Home")
</div>
