@model PagedList.IPagedList<WebProtectoraMilpatitas.Models.ContratoAdopcionViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index Contratos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contratos de Adopcion</h2>

<p>
    @Html.ActionLink("Crear nuevo contrato", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Usuario
        </th>
        <th>
            Animal
        </th>
        <th>
            Solicitud
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.Nombre != null)
                {
                    @Html.ActionLink(item.Nombre, "Details", new { id = item.Id })
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Nombre)
                }

            </td>
            <td>
                <figure>
                    <figcaption>@Html.ActionLink(item.NomUsuario, "Details", "Usuario", new { email = item.idUsuario }, htmlAttributes: null) </figcaption>
                    <img style="display:block;margin:auto; width: 200px;height: 200px;" src="/@Html.DisplayFor(modelItem => item.FotoUsuario)" />
                </figure>
            </td>
            <td>
                <figure>
                    <figcaption>@Html.ActionLink(item.NomAnimal, "Details", "Animal", new { id = item.idAnimal }, htmlAttributes: null) </figcaption>
                    <img style="display:block;margin:auto; width: 200px;height: 200px;" src="/@Html.DisplayFor(modelItem => item.FotoAnimal)" />
                </figure>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idSolicitud)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Actualizar Estado", "ActualizarEstado", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<br />
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
<div>
    @Html.ActionLink("Volver a inicio", "Indexad", "Home")
</div>
