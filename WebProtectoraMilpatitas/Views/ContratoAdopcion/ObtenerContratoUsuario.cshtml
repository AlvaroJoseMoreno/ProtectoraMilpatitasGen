@model IEnumerable<WebProtectoraMilpatitas.Models.ContratoAdopcionViewModel>

@{
    ViewBag.Title = "ObtenerContratoUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de contratos de adopcion del usuario: @ViewData["NombreUsuario"]</h2>

<p>
    @Html.ActionLink("Crear nuevo contrato", "Create")
</p>
<p>
    @Html.ActionLink("Volver a usuarios", "Index", "Usuario")
</p>
<table class="table">
    @{
        if (Model.Any())
        {
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DNI_NIF_Pasaporte)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EscrituraHogar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JustificantePago)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LugarRecojida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirmaCompromiso)
                </th>
                <th></th>
            </tr>
        }
        else
        {
            <tr>No tiene contratos de adopcion</tr>
        }
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI_NIF_Pasaporte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EscrituraHogar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JustificantePago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LugarRecojida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirmaCompromiso)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
