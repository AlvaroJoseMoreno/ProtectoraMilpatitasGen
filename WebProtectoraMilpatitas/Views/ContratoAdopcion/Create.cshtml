@model WebProtectoraMilpatitas.Models.ContratoAdopcionViewModel

@{
    ViewBag.Title = "Crear nuevo contrato de adopcion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Contrato de Adopcion</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ContratoAdopcionViewModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.idUsuario, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.idUsuario, ViewData["idUsuario"] as SelectList, "Selecciona un usuario")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.idAnimal, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.idAnimal, ViewData["idAnimal"] as SelectList, "Selecciona un animal")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.idSolicitud, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.idSolicitud, ViewData["idSolicitud"] as SelectList, "Selecciona una solicitud")
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
