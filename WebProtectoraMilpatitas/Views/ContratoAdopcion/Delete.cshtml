@model WebProtectoraMilpatitas.Models.ContratoAdopcionViewModel

@{
    ViewBag.Title = "Eliminar contrato de adopcion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar contrato de adopcion</h2>

<h3>¿Estás seguro de que quieres eliminar el contrato @ViewData["IdCon"] de @ViewData["NombreCon"]?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver a la lista", "Index")
        </div>
    }
</div>
