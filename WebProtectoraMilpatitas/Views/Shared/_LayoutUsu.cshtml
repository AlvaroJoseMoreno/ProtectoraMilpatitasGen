<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" media="screen" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/codigo.js"></script>

</head>
<body class="arriba">


    <div class="arri">
        <div class="container">
            <div class="navbar-header">


                <div id="title">
                    @Html.ActionLink("Protectora Milpatitas", "Indexad", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>


        </div>
    </div>
    <div class="listaarriba">
        <label for="chkmenu"><span>X</span></label>
        <input type="checkbox" id="chkmenu">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Buscar", "BuscarAnimales", "Animal")</li>
            <li>@Html.ActionLink("Test Animal Ideal", "RellenarTest", "TestAnimalIdeal")</li>
            <li>@Html.ActionLink("Perfil", "Perfil", "Usuario")</li>
        </ul>
        <div>
            @Html.Partial("_LoginPartial")
        </div>

    </div>


    @*@{

        List<string> ruta =  ((List<string>)Session["RUTA"]);
        foreach (string s in ruta)
        {
            <a href=@s>@s  </a>
        }


        }*@
    <div class="container body-content">
        <p>Estás aquí: @Html.MvcSiteMap().SiteMapPath()</p>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
