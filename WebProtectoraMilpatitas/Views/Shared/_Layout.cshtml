<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link rel="stylesheet" href="~/Scripts/mediaquery.css" type="text/css" media="screen" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/codigo.js"></script>

</head>


<body class="arriba">
    <header>
        <div id="icono">
            <img src="~/Imagenes/patas.png" />
        </div>
        <div class="arri">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Protectora Milpatitas", "Indexad", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>


            </div>
        </div>
        <div class="listaarriba">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Inicio", "Indexad", "Home")</li>
                <li>@Html.ActionLink("Animales", "Index", "Animal")</li>
                <li>@Html.ActionLink("Usuarios", "Index", "Usuario")</li>
                <li>@Html.ActionLink("Solicitudes Adopcion", "Index", "SolicitudAdopcion")</li>
                <li>@Html.ActionLink("Contratos Adopcion", "Index", "ContratoAdopcion")</li>
                <li>@Html.ActionLink("Seguimientos", "Index", "Seguimiento")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </header>
  
    @*@{

        List<string> ruta =  ((List<string>)Session["RUTA"]);
        foreach (string s in ruta)
        {
            <a href=@s>@s  </a>
        }


        }*@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
            <ul>
                <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
            </ul>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
