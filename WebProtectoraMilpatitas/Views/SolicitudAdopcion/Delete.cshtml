@model WebProtectoraMilpatitas.Models.SolicitudAdopcionViewModel

@{
    ViewBag.Title = "Eliminar Solicitud de Adopcion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Solicitud de Adopcion</h2>
<div class="formEliminarGuapo">
    <h2>¿Estás seguro de que quieres eliminar la solicitud @ViewData["IdSol"] de @ViewData["NombreSol"]?</h2>
</div>

<div>
    <hr />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color parrafoCentrar">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            <i class="fas fa-edit"></i> @Html.ActionLink("Volver a la lista", "Index")
        </div>
    }
</div>
