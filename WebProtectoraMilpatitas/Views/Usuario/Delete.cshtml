@model ProtectoraMilpatitasGenNHibernate.CEN.ProtectoraMilpatitas.UsuarioCEN

@{
    ViewBag.Title = "Eliminar usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar usuario</h2>
<div class="formEliminarGuapo">
    <h2>¿Estás seguro de querer eliminar al usuario @ViewData["NombreUsu"]?</h2>
</div>
<div>
    <hr />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color parrafoCentrar">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            <i class="fas fa-user"></i> @Html.ActionLink("Volver a la lista", "Index")
        </div>
    }
</div>
