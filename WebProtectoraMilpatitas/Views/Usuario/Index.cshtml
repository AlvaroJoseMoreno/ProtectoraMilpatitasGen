@model IEnumerable<WebProtectoraMilpatitas.Models.UsuarioViewModel>

@{
    ViewBag.Title = "ProtectoraMilPatitas-Administrador: Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuarios</h2>
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <figure>
                <figcaption>@Html.ActionLink(item.Nombre, "Details", new { email = item.Email }) </figcaption>
                <img style="display:block;margin:auto; width: 200px;height: 200px;" src="/@Html.DisplayFor(modelItem => item.Foto)" />
            </figure>
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { email = item.Email }) |
            @Html.ActionLink("Obtener Solicitudes Adopcion", "ObtenerSolicitudUsuario", "SolicitudAdopcion", new { email = item.Email }, htmlAttributes: null) |
            @Html.ActionLink("Obtener Contratos Adopcion", "ObtenerContratoUsuario", "ContratoAdopcion", new { email = item.Email }, htmlAttributes: null)|
            @Html.ActionLink("Obtener Seguimientos", "ObtenerSeguimientoUsuario", "Seguimiento", new { email = item.Email }, htmlAttributes: null) |
            @Html.ActionLink("Eliminar", "Delete", new { email = item.Email })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Volver a inicio", "Indexad", "Home")
</div>
